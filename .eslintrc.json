{
  "env": {
    "es6": true,
    "node": true,
    "es2020": true  // <- activate “es2020” globals
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
  ],
  "extends": "eslint:recommended",
  "globals": {
    "require": true,
    "module": true,
    "describe": true,
    "it": true,
    "before": true,
    "after": true
  }
}